generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id       String    @id @default(uuid())
  email    String    @unique
  name     String?
  Password Password?
}

model Password {
  id       String  @id @default(uuid())
  password String
  User     User?   @relation(fields: [userId], references: [id])
  userId   String? @unique
}
